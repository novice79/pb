//init_vpn.sh
#!/bin/bash
set -e
sleep 2
/vpn/vpnserver/vpncmd localhost /SERVER /CMD ServerPasswordSet freego
# /vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /CMD HubList
# /vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /CMD HubCreate VPN /PASSWORD:freego
# use DEFAULT hub
/vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /adminhub:DEFAULT /CMD SecureNatEnable
# /vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /adminhub:DEFAULT /CMD UserCreate freego /GROUP:none /REALNAME:none /NOTE:none
# /vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /adminhub:DEFAULT /CMD UserPasswordSet freego /PASSWORD:freego2016
# /vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /CMD IPsecEnable /L2TP:yes /L2TPRAW:yes /ETHERIP:yes /PSK:freego2016 /DEFAULTHUB:DEFAULT
# /vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /CMD ServerCertSet /LOADCERT:/etc/letsencrypt/live/freeland.online/fullchain.pem /LOADKEY:/etc/letsencrypt/live/freeland.online/privkey.pem
/vpn/vpnserver/vpncmd localhost /SERVER /PASSWORD:freego /CMD SstpEnable yes


sudo systemctl disable apt-daily.service # disable run when system boot
sudo systemctl disable apt-daily.timer   # disable timer run


sudo route add -host 52.78.68.21 gw 192.168.0.1
sudo route del default
sudo route add default gw 192.168.30.1 dev vpn_fg
////
sudo ip route add 52.78.68.21/32 via 192.168.0.1 dev enp0s3
sudo ip route del default
sudo ip route add default via 192.168.30.1 dev vpn_fg

sudo ip route del 52.78.68.21/32
sudo ip route del default
sudo ip route add default via 192.168.0.1 dev enp0s3

sudo route del -host 52.78.68.21
sudo route del default
sudo route add default gw 192.168.0.1 dev enp0s3

